<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1.0.1-AutoLoanReferenceEnginePower" author="aelshin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT
                  COUNT(REFERENCEID)
                FROM
                  REF_REFERENCE
                WHERE
                  REFSYSNAME = 'engineCapacity'
                  AND REFGROUPID IN (
                    SELECT
                      REFGROUPID
                    FROM
                      REF_REFGROUP
                    WHERE
                      PARENTGROUPID = 0
                      AND GROUPSYSNAME = 'AutoLoan'
                    )
            </sqlCheck>
        </preConditions>

        <insert tableName="REF_REFERENCE">
            <column name="REFERENCEID" valueComputed="nextval('REF_REFERENCE_SEQ')"/>
            <column name="REFGROUPID" valueComputed="(SELECT REFGROUPID FROM REF_REFGROUP WHERE PARENTGROUPID = 0 AND GROUPSYSNAME = 'AutoLoan')"/>
            <column name="REFERENCENAME">Объем двигателя (куб. см.)</column>
            <column name="REFSYSNAME">engineCapacity</column>
            <column name="DESCRIPTION"></column>
        </insert>

    </changeSet>

    <changeSet id="1.0.1-AutoLoanRefItemEngineCapacity0" author="aelshin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT
                  COUNT(REFITEMID)
                FROM
                  REF_REFITEM
                WHERE
                  CODE = '1'
                  AND REFERENCEID IN (
                    SELECT
                      REFERENCEID
                    FROM
                      REF_REFERENCE
                    WHERE
                      REFSYSNAME = 'engineCapacity'
                  )
            </sqlCheck>
        </preConditions>

        <insert tableName="REF_REFITEM">
            <column name="REFITEMID" valueComputed="nextval('REF_REFITEM_SEQ')"/>
            <column name="REFERENCEID" valueComputed="(SELECT REFERENCEID FROM REF_REFERENCE WHERE REFSYSNAME = 'engineCapacity')"/>
            <column name="CODE">1</column>
            <column name="NAME">0</column>
            <column name="BRIEF">0</column>
            <column name="DESCRIPTION"></column>
        </insert>

    </changeSet>

</databaseChangeLog>