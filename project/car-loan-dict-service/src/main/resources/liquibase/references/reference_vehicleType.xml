<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1.0.1-AutoLoanReferenceVehicleType" author="aelshin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT
                  COUNT(REFERENCEID)
                FROM
                  REF_REFERENCE
                WHERE
                  REFSYSNAME = 'vehicleType'
                  AND REFGROUPID IN (
                    SELECT
                      REFGROUPID
                    FROM
                      REF_REFGROUP
                    WHERE
                      PARENTGROUPID = 0
                      AND GROUPSYSNAME = 'AutoLoan'
                  )
            </sqlCheck>
        </preConditions>

        <insert tableName="REF_REFERENCE">
            <column name="REFERENCEID" valueComputed="nextval('REF_REFERENCE_SEQ')"/>
            <column name="REFGROUPID" valueComputed="(SELECT REFGROUPID FROM REF_REFGROUP WHERE PARENTGROUPID = 0 AND GROUPSYSNAME = 'AutoLoan')"/>
            <column name="REFERENCENAME">Тип транспортного средства</column>
            <column name="REFSYSNAME">vehicleType</column>
            <column name="DESCRIPTION"></column>
        </insert>

    </changeSet>

    <changeSet id="1.0.1-AutoLoanRefItemVehicleKindNew" author="aelshin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT
                  COUNT(REFITEMID)
                FROM
                  REF_REFITEM
                WHERE
                  CODE = 'New'
                  AND REFERENCEID IN (
                    SELECT
                      REFERENCEID
                    FROM
                      REF_REFERENCE
                    WHERE
                      REFSYSNAME = 'vehicleType'
                  )
            </sqlCheck>
        </preConditions>

        <insert tableName="REF_REFITEM">
            <column name="REFITEMID" valueComputed="nextval('REF_REFITEM_SEQ')"/>
            <column name="REFERENCEID" valueComputed="(SELECT REFERENCEID FROM REF_REFERENCE WHERE REFSYSNAME = 'vehicleType')"/>
            <column name="CODE">New</column>
            <column name="NAME">Новый</column>
            <column name="BRIEF">Новый</column>
            <column name="DESCRIPTION"></column>
        </insert>

    </changeSet>

    <changeSet id="1.0.1-AutoLoanRefItemVehicleKindUsed" author="aelshin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT
                  COUNT(REFITEMID)
                FROM
                  REF_REFITEM
                WHERE
                  CODE = 'Used'
                  AND REFERENCEID IN (
                  SELECT
                    REFERENCEID
                  FROM
                    REF_REFERENCE
                  WHERE
                    REFSYSNAME = 'vehicleType'
                )
            </sqlCheck>
        </preConditions>

        <insert tableName="REF_REFITEM">
            <column name="REFITEMID" valueComputed="nextval('REF_REFITEM_SEQ')"/>
            <column name="REFERENCEID" valueComputed="(SELECT REFERENCEID FROM REF_REFERENCE WHERE REFSYSNAME = 'vehicleType')"/>
            <column name="CODE">Used</column>
            <column name="NAME">Подержанный</column>
            <column name="BRIEF">Подержанный</column>
            <column name="DESCRIPTION"></column>
        </insert>

    </changeSet>

</databaseChangeLog>